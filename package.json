{
  "name": "hedgesync",
  "version": "1.2.0",
  "description": "A library and CLI to programmatically connect to a running HedgeDoc server and make live edits to documents",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "bin": {
    "hedgesync": "./dist/bin/hedgesync.js"
  },
  "files": [
    "dist",
    "src",
    "deno.json",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "test": "bun run test/test-all-features.js",
    "example": "bun run examples/basic-usage.js",
    "cli": "bun run bin/hedgesync.ts",
    "build:lib": "tsc -p tsconfig.build.json",
    "build:cli-js": "tsc -p tsconfig.cli.json && sed -i \"s|from '../src/index.js'|from '../index.js'|g; s|from '../src/macro-engine.js'|from '../macro-engine.js'|g; s|from '../src/auth.js'|from '../auth.js'|g; 1s|#!/usr/bin/env bun|#!/usr/bin/env node|\" dist/bin/hedgesync.js",
    "build:cli": "bun build bin/hedgesync.ts --compile --outfile dist/hedgesync",
    "build:linux": "bun build bin/hedgesync.ts --compile --target=bun-linux-x64 --outfile dist/hedgesync-linux-x64",
    "build:macos": "bun build bin/hedgesync.ts --compile --target=bun-darwin-x64 --outfile dist/hedgesync-darwin-x64",
    "build:macos-arm": "bun build bin/hedgesync.ts --compile --target=bun-darwin-arm64 --outfile dist/hedgesync-darwin-arm64",
    "build:windows": "bun build bin/hedgesync.ts --compile --target=bun-windows-x64 --outfile dist/hedgesync-windows-x64.exe",
    "build:all": "bun run build:linux && bun run build:macos && bun run build:macos-arm && bun run build:windows",
    "build": "npm run build:lib && npm run build:cli-js",
    "prepublishOnly": "npm run build",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "hedgedoc",
    "realtime",
    "collaboration",
    "operational-transformation",
    "socket.io",
    "cli",
    "markdown",
    "editor"
  ],
  "author": "tionis.dev",
  "license": "AGPL-3.0-only",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tionis/hedgesync.git"
  },
  "bugs": {
    "url": "https://github.com/tionis/hedgesync/issues"
  },
  "homepage": "https://github.com/tionis/hedgesync#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "socket.io-client": "^4.7.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  }
}
