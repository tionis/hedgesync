{
  "name": "hedgesync",
  "version": "1.1.0",
  "description": "A library and CLI to programmatically connect to a running HedgeDoc server and make live edits to documents",
  "main": "src/index.ts",
  "type": "module",
  "bin": {
    "hedgesync": "./bin/hedgesync.ts"
  },
  "scripts": {
    "test": "bun run test/test-all-features.js",
    "example": "bun run examples/basic-usage.js",
    "cli": "bun run bin/hedgesync.ts",
    "build": "bun build bin/hedgesync.ts --compile --outfile dist/hedgesync",
    "build:linux": "bun build bin/hedgesync.ts --compile --target=bun-linux-x64 --outfile dist/hedgesync-linux-x64",
    "build:macos": "bun build bin/hedgesync.ts --compile --target=bun-darwin-x64 --outfile dist/hedgesync-darwin-x64",
    "build:macos-arm": "bun build bin/hedgesync.ts --compile --target=bun-darwin-arm64 --outfile dist/hedgesync-darwin-arm64",
    "build:windows": "bun build bin/hedgesync.ts --compile --target=bun-windows-x64 --outfile dist/hedgesync-windows-x64.exe",
    "build:all": "bun run build:linux && bun run build:macos && bun run build:macos-arm && bun run build:windows",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "hedgedoc",
    "realtime",
    "collaboration",
    "operational-transformation",
    "socket.io",
    "cli"
  ],
  "author": "",
  "license": "AGPL-3.0-only",
  "dependencies": {
    "socket.io-client": "^4.7.0"
  },
  "devDependencies": {
    "@types/bun": "latest"
  }
}
